<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magmodules_MessageBird::configuration" title="Accounting configuration"
                                      translate="title"/>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magmodules_MessageBird::messagebird" sortOrder="200" title="MessageBird">
                    <resource id="Magmodules_MessageBird::communication_log_listing" sortOrder="10" title="Communication Log"/>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
